<% content_for(:content) do %>
  <% if content_for? :sidebar %>
    <section id="content" class="col-lg-9 order-last" aria-label="<%= t('blacklight.search.documents.aria.search_results') %>">
      <div class="alert alert-warning alert-dismissible fade show" role="alert">
        <%= blacklight_icon :'alert-triangle-fill', aria_hidden: true %>
          This collection contains graphic and potentially traumatic descriptions of executions and their circumstances. The original descriptions may contain harmful language or fail to demonstrate sufficient empathy for the subjects they depict.
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      
      <%= yield %>
    </section>

    <section id="sidebar" class="<%= sidebar_classes %> order-first" aria-label="<%= t('blacklight.search.documents.aria.limit_search') %>">
      <%= content_for(:sidebar) %>
    </section>
  <% else %>
    <section class="col-md-12">
      <%= yield %>
    </section>
  <% end %>
<% end %>

<%= render template: "layouts/blacklight/base" %>
